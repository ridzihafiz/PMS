<% include ../partials/header %>

<br>
<h4>Add Project</h4>
<hr>

<form action="" method="post">
    <div class="form-group row">
        <label for="inputProjectName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" name="projectname" class="form-control" id="inputProjectName" placeholder="Project Name">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">Members</div>
        <div class="col-sm-10">
            <% users.forEach (item => {%>
            <div class="form-check">
                <input name="members" class="form-check-input" type="checkbox" value="<%= item.userid %>">
                <label class="form-check-label">
                        <%= item.fullname %>
                </label>
            </div>
        <% }) %> 
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-warning" href="/projects">Cancel</a>
        </div>
    </div>
</form>

<% include ../partials/footer %>